@model ButceYonet.Application.Infrastructure.MailTemplates.ForgotPasswordOtpCodeCreatedTemplateModel
<table width="100%" cellpadding="0" cellspacing="0" style="background-color:#f6f7fb;">
    <tr>
        <td>
            <!-- Logo / Header -->
            <table width="650" cellpadding="0" cellspacing="0" align="center" style="margin-bottom:30px;">
                <tr>
                    <td align="center">
                        <h2 style="margin:0; color:#22c55e;"> Bütçe Yönet </h2>
                    </td>
                </tr>
            </table>
            <!-- Content -->
            <table width="650" cellpadding="0" cellspacing="0" align="center" style="background-color:#ffffff; border-radius:8px;">
                <tr>
                    <td style="padding:30px; color:#333333; font-size:13px; line-height:1.7; letter-spacing:0.5px;">
                        <p style="margin-top:0;">Merhaba,</p>

                        <p>
                            <strong>Bütçe Yönet</strong> hesabınız için bir şifre yenileme talebi aldık.
                        </p>

                        <p>
                            Şifrenizi yenilemek için aşağıdaki <strong>tek kullanımlık doğrulama kodunu (OTP)</strong> kullanabilirsiniz:
                        </p>

                        <div style="margin:25px 0; text-align:center;">
                            <span style="
                                display:inline-block;
                                padding:15px 25px;
                                font-size:22px;
                                letter-spacing:4px;
                                font-weight:bold;
                                background-color:#f6f7fb;
                                color:#22c55e;
                                border-radius:6px;
                            ">
                                @Model.OtpCode
                            </span>
                        </div>

                        <p>
                            Bu kod <strong>kısa bir süre</strong> için geçerlidir ve güvenliğiniz için yalnızca bir kez kullanılabilir.
                        </p>

                        <p>
                            Eğer bu şifre yenileme talebini siz oluşturmadıysanız, bu e-postayı dikkate almayabilir veya bizimle iletişime geçebilirsiniz.
                        </p>

                        <p style="margin-bottom:0;">
                            Güvenliğiniz bizim için önemlidir.<br>
                            <strong>Bütçe Yönet Ekibi</strong>
                        </p>
                    </td>
                </tr>
            </table>
            <!-- Footer -->
            <table width="650" cellpadding="0" cellspacing="0" align="center" style="margin-top:30px;">
                <tr>
                    <td align="center" style="font-size:12px; color:#999999;">
                        <p style="margin-bottom:4px;"> © @Model.Year Bütçe Yönet </p>
                        <p style="margin-bottom:0;"> Bu e-posta otomatik olarak gönderilmiştir. </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>